@model Fashionista.Application.Brands.Commands.Create.CreateBrandCommand

@{
    this.ViewData["Title"] = "Administration | Create Brand";
}


<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Create a new Brand</h4>
            </div>
            <hr>
            <form class="form-horizontal" form method="post" asp-controller="Brands" asp-action="Create" enctype="multipart/form-data">
                <div class="card-body">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group row">
                        <label for="ename" class="col-sm-3 text-right control-label col-form-label">Brand Name</label>
                        <div class="col-sm-6">
                            <input asp-for="@Model.Name" class="form-control" placeholder="Brand Name Here">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="ename" class="col-sm-3 text-right control-label col-form-label">Upload photo</label>
                        <div class="col-sm-6">
                            <div class="btn btn-info waves-effect waves-light">
                                <input type="file" asp-for="Photo" class="upload">
                                <span asp-validation-for="Photo" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <hr>
                <div class="card-body">
                    <div class="form-group m-b-0 text-right">
                        <button type="submit" class="btn btn-info waves-effect waves-light">Save</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}