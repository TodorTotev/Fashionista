@model Fashionista.Application.ProductAttributes.Commands.Edit.EditProductAttributeCommand

@{
    this.ViewData["Title"] = "Administration | Add Attributes";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <form asp-controller="Products" asp-action="EditAttributes" method="post">
                        <input asp-for="ProductId" hidden/>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-body">
                            <h5 class="card-title">Add Attributes</h5>
                            <hr>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label">Size</label>
                                        <input class="form-control" placeholder="@Model.ProductSizeName" disabled>
                                    </div>
                                </div>
                                <!--/span-->
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label">Color</label>
                                        <input class="form-control" placeholder="@Model.ProductColorName" disabled>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label">Quanitity</label>
                                        <input type="number" asp-for="Quantity" class="form-control" placeholder="Please write quantity here">
                                        <span asp-validation-for="Quantity" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!--/row-->
                        <!--/row-->
                        <div class="form-actions m-t-40">
                            <button type="submit" class="btn btn-success"> <i class="fa fa-check"></i> Save</button>
                            <button type="button" class="btn btn-dark">Cancel</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}