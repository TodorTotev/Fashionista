@using Fashionista.Domain.Entities.Enums
@model Fashionista.Application.Products.Commands.Edit.EditProductCommand

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <form asp-controller="Products" asp-action="Create" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-body">
                            <h5 class="card-title">Create Product</h5>
                            <hr>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label">Product Name</label>
                                        <input asp-for="Name" class="form-control" placeholder="Please write your product name here">
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>
                                </div>
                                <!--/span-->
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Status</label>
                                        <br/>
                                        <div class="custom-control custom-radio custom-control-inline">
                                            <input asp-for="IsHidden" value="false" type="radio" id="customRadioInline1" class="custom-control-input">
                                            <label class="custom-control-label" for="customRadioInline1">Publish</label>
                                        </div>
                                        <div class="custom-control custom-radio custom-control-inline">
                                            <input asp-for="IsHidden" value="true" type="radio" id="customRadioInline2" class="custom-control-input">
                                            <label class="custom-control-label" for="customRadioInline2">Draft</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label">Category</label>
                                        <select asp-for="SubCategoryId" asp-items="@Model.SubCategories.SubCategories" class="custom-select">
                                            @if (!Model.SubCategories.SubCategories.Any())
                                            {
                                                <option value="" disabled selected> There are no sub categories </option>
                                            }
                                            else
                                            {
                                                <option value="" disabled selected> Please select subcategory</option>
                                            }
                                        </select>
                                        <button asp-controller="SubCategories" asp-action="Create" type="submit" class="btn btn-link">Click here to create new category</button>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Price</label>
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" id="basic-addon1">
                                                    <i class="ti-money"></i>
                                                </span>
                                            </div>
                                            <input asp-for="Price" class="form-control" placeholder="Please write the product price here" aria-label="price" aria-describedby="basic-addon1">
                                            <span asp-validation-for="Price" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label">Brand Name</label>
                                        <select asp-for="BrandId" asp-items="@Model.Brands.Brands" class="custom-select">
                                            @if (!Model.Brands.Brands.Any())
                                            {
                                                <option value="" disabled selected>-- There are no brands --</option>
                                            }
                                            else
                                            {
                                                <option value="" disabled selected> Please select a brand </option>
                                            }
                                        </select>
                                        <button asp-controller="Brands" asp-action="Create" type="submit" class="btn btn-link">Click here to create new brand</button>
                                    </div>
                                </div>
                                ---
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label">Product Type</label>
                                        <select asp-for="ProductType" asp-items="Html.GetEnumSelectList<ProductType>()" class="custom-select"></select>
                                    </div>
                                </div>
                            </div>
                            <!--/span-->
                        </div>
                        <!--/row-->
                        <h5 class="card-title m-t-40">Product Description</h5>
                        <div class="row">
                            <div class="col-md-12 ">
                                <div class="form-group">
                                    <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <!--/row-->
                        <div class="row">
                            <!--/span-->
                            <div class="col-md-3">
                                <div class="btn btn-info waves-effect waves-light">
                                    <span>Upload Photo</span>
                                    <input asp-for="Photos" class="upload">
                                    <span asp-validation-for="Photos" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="form-actions m-t-40">
                            <button type="submit" class="btn btn-success"> <i class="fa fa-check"></i> Save</button>
                            <button type="button" class="btn btn-dark">Cancel</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}