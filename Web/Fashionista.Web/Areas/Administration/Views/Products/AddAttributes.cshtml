@using Fashionista.Domain.Entities
@model Fashionista.Application.ProductAttributes.Commands.Create.CreateProductAttributeCommand

@{
    this.ViewData["Title"] = "Administration | Add Attributes";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <form asp-controller="Products" asp-action="AddAttributes" method="post">
                        <input asp-for="ProductId" hidden/>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-body">
                            <h5 class="card-title">Add Attributes</h5>
                            <hr>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label">Product Name</label>
                                        <input class="form-control" placeholder="@Model.ProductName" disabled>
                                    </div>
                                </div>
                                <!--/span-->
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label">Quanitity</label>
                                        <input type="number" asp-for="Quantity" class="form-control" placeholder="Please write quantity here">
                                        <span asp-validation-for="Quantity" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label">Product Sizes</label>
                                        <select asp-for="ProductSizeId" asp-items="@Model.SizesSelectListViewModel.AllSizes" class="custom-select">
                                            @if (!Model.SizesSelectListViewModel.AllSizes.Any())
                                            {
                                                <option value="" disabled selected> There are no available sizes, please add new size from the link below! </option>
                                            }
                                            else
                                            {
                                                <option value="" disabled selected> Please select size</option>
                                            }
                                        </select>
                                        <a asp-controller="ProductSize" asp-action="Create" asp-route-id="@Model.ProductId" class="btn btn-link">Click here to add new size</a>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label">Product Colors</label>
                                        <select asp-for="ProductColorId" asp-items="@Model.ColorsSelectListViewModel.AllColors" class="custom-select">
                                            @if (!Model.SizesSelectListViewModel.AllSizes.Any())
                                            {
                                                <option value="" disabled selected> There are no available colors, please add new size from the link below! </option>
                                            }
                                            else
                                            {
                                                <option value="" disabled selected> Please select size</option>
                                            }
                                        </select>
                                        <a asp-controller="ProductColor" asp-action="Create" asp-route-id="@Model.ProductId" class="btn btn-link">Click here to add new color</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!--/row-->
                        <!--/row-->
                        <div class="form-actions m-t-40">
                            <button type="submit" class="btn btn-success"> <i class="fa fa-check"></i> Save</button>
                            <button type="button" class="btn btn-dark">Cancel</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}