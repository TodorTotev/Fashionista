@model Fashionista.Application.ProductColors.Commands.Create.CreateProductColorCommand

@{
    this.ViewData["Title"] = "Administration | Create color";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <form asp-controller="ProductColor" asp-action="Create" method="post">
                        <input type="hidden" asp-for="ProductId"/>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-body">
                            <h5 class="card-title">Create a new color</h5>
                            <hr>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label">Color</label>
                                        <input asp-for="Name" type="text" asp class="form-control" placeholder="Enter your color here">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!--/row-->
                        <!--/row-->
                        <div class="form-actions m-t-40">
                            <button type="submit" class="btn btn-success"> <i class="fa fa-check"></i> Save</button>
                            <button type="button" class="btn btn-dark">Cancel</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial"/>
}