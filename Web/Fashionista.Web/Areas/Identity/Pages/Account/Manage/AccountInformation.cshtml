@page
@model AccountInformationModel
@{
    ViewData["Title"] = "Account Information";
}
<nav aria-label="breadcrumb" class="breadcrumb-nav">
    <div class="container">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-page="./Index">
                    <i class="icon-home"></i>
                </a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">Account Information</li>
        </ol>
    </div><!-- End .container -->
</nav>

<div class="container">
    <div class="row">
        <div class="col-lg-9 order-lg-last dashboard-content">
            <h2>Edit Account Information</h2>
            <partial name="_StatusMessage" for="StatusMessage"/>
            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="row">
                    <div class="col-sm-11">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group required-field">
                                    <label asp-for="Input.FirstName"></label>
                                    <input asp-for="Input.FirstName" class="form-control" required>
                                </div><!-- End .form-group -->
                            </div><!-- End .col-md-4 -->

                            <div class="col-md-4">
                                <div class="form-group required-field">
                                    <label asp-for="Input.LastName"></label>
                                    <input asp-for="Input.LastName" class="form-control" required>
                                </div><!-- End .form-group -->
                            </div><!-- End .col-md-4 -->
                        </div><!-- End .row -->
                    </div><!-- End .col-sm-11 -->
                </div><!-- End .row -->

                <div class="form-group">
                    <label asp-for="@Model.Username"></label>
                    <input asp-for="@Model.Username" class="form-control" disabled>
                </div><!-- End .form-group -->

                <div class="form-group required-field">
                    <label asp-for="Input.PhoneNumber"></label>
                    <input asp-for="Input.PhoneNumber" class="form-control" required>
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div><!-- End .form-group -->

                @if (Model.IsEmailConfirmed)
                {
                    <div class="form-group required-field">
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="form-control" required>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div><!-- End .form-group -->
                }
                else
                {
                    <div class="form-group required-field">
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="form-control" required>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div><!-- End .form-group -->
                    <button id="email-verification" type="submit" asp-page-handler="SendVerificationEmail" class="btn btn-link">Send verification email</button>
                }
                <span asp-validation-for="Input.Email" class="text-danger"></span>

                <div class="mb-2"></div><!-- margin -->

                <div class="form-footer">
                    <a asp-page="./Index"><i class="icon-angle-double-left"></i>Back</a>

                    <div class="form-footer-right">
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </div><!-- End .form-footer -->
            </form>
        </div><!-- End .col-lg-9 -->

        <partial name="Partials/_DashboardNavigationPartial"/>
    </div><!-- End .row -->
</div><!-- End .container -->

<div class="mb-5"></div><!-- margin -->

@section Scripts
{
    <partial name="_ValidationScriptsPartial"/>
}