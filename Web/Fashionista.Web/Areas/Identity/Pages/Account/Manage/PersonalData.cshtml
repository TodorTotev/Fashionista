@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}
<nav aria-label="breadcrumb" class="breadcrumb-nav">
    <div class="container">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-page="./Index">
                    <i class="icon-home"></i>
                </a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">Personal Data</li>
        </ol>
    </div><!-- End .container -->
</nav>


<div class="container">
    <div class="row">
        <div class="col-lg-9 order-lg-last dashboard-content">
            <h2>Personal Data</h2>
            <div class="col-md-6">
                <p>Your account contains personal data that you have given us. This page allows you to download or delete that data.</p>
                <p>
                    <strong>Deleting this data will permanently remove your account, and this cannot be recovered.</strong>
                </p>
                <form id="download-data" asp-page="DownloadPersonalData" method="post" class="form-group">
                    <button class="btn btn-primary" type="submit">Download</button>
                </form>
                <p>
                    <a asp-page="DeletePersonalData" class="btn btn-primary">Delete</a>
                </p>
            </div>


            <div class="mb-2"></div><!-- margin -->

        </div><!-- End .col-lg-9 -->

        <partial name="Partials/_DashboardNavigationPartial"/>
    </div><!-- End .row -->
</div><!-- End .container -->